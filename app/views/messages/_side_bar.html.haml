%body
  .wrapper
    .Side-bar
      .Side-bar__user-name
        .Top-items
          %h3.Top-items__name
            = current_user.name
          %ul.Top-items__icons
            %li.Top-items__icons--edit
            = link_to "#" do
              = icon('fas', 'edit', class: 'edit')
            %li.Top-items__icons--cog
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'cog')
      .Side-bar__group-list
        .Group
          = link_to '#' do
            .Group__name
              グループ名
            .Group__message
              最新のメッセージ